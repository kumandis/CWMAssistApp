<!-- Main content -->
<div class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-6">
                <div class="card">
                    <div class="card-body">
                        <div class="timeline timeline-inverse">
                            <div class="time-label">
                                <span class="bg-danger">
                                    @Model.TimelineStartText
                                </span>
                            </div>
                            @foreach (var item in @Model.Appointments)
                            {
                                <div>
                                    <i class="fas fa-book-open bg-primary"></i>
                                
                                    <div class="timeline-item">
                                        <span class="time">
                                            <i class="far fa-clock"></i> @item.AppointmentHour
                                        </span>
                                        <h3 class="timeline-header">
                                            <a href="#">@item.Subject</a> @item.TeacherName
                                        </h3>
                                        <div class="timeline-body">
                                            <div class="card collapsed-card">
                                                <div class="card-header">
                                                    <h3 class="card-title">
                                                        Katılımcılar
                                                    </h3>
                                                    <div class="card-tools">
                                                        <button type="button" class="btn btn-tool" data-card-widget="collapse" title="Collapse">
                                                            <i class="fas fa-plus"></i>
                                                        </button>
                                                    </div>
                                                </div>
                                                <div class="card-body" style="display: none">
                                                    <table class="table table-sm">
                                                        <thead>
                                                        </thead>
                                                        <tbody>
                                                        @foreach (var customer in @item.CustomerAppointments)
                                                        {
                                                            <tr>
                                                                <td>@customer.RowNumber</td>
                                                                <td>@customer.Name</td>
                                                                <td>@customer.PhoneNumber</td>
                                                            </tr>
                                                        }
                                                        </tbody>
                                                    </table>
                                                </div>
                                            </div>
                                            
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                    <div class="card-footer">
                        <span>Toplam Ziyaretçi : @Model.DailyVisitorCount</span>
                        <span class="float-right">Toplam Kazanç : @Model.DailyTotalIncome ₺</span>
                    </div>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="card">
                    <div class="card-header border-0">
                        <div class="d-flex justify-content-between">
                            <h3 class="card-title">Haftalık Ziyaretçi Grafiği</h3>
                            <a href="javascript:void(0);">Diğer Haftaların Raporları</a>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="d-flex">
                            <p class="d-flex flex-column">
                                <span class="text-bold text-lg"><label id="thisWeekVisitorCount">0</label></span>
                                <span>Haftanın Ziyaretçileri</span>
                            </p>
                            <p id="rateMain" class="ml-auto d-flex flex-column text-right">
                                <span id="rateText">
                                    @*<i class="fas fa-arrow-up"></i>*@
                                </span>
                                <span class="text-muted">Geçen haftaya göre</span>
                            </p>
                        </div>
                        <!-- /.d-flex -->

                        <div class="position-relative mb-4">
                            <canvas id="visitors-chart" height="200"></canvas>
                        </div>

                        <div class="d-flex flex-row justify-content-end">
                            <span class="mr-2">
                                <i class="fas fa-square text-primary"></i> Bu Hafta
                            </span>

                            <span>
                                <i class="fas fa-square text-gray"></i> Geçen Hafta
                            </span>
                        </div>
                    </div>
                </div>
            </div>


