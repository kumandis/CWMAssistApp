@model PersonalVM
@{
    ViewData["Title"] = "PersonalList";
}
<link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700&display=fallback">
<!-- Font Awesome -->
<link rel="stylesheet" href="~/lib/plugins/fontawesome-free/css/all.min.css">
<!-- DataTables -->
<link rel="stylesheet" href="~/lib/plugins/datatables-bs4/css/dataTables.bootstrap4.min.css">
<link rel="stylesheet" href="~/lib/plugins/datatables-responsive/css/responsive.bootstrap4.min.css">
<link rel="stylesheet" href="~/lib/plugins/datatables-buttons/css/buttons.bootstrap4.min.css">
<link rel="stylesheet" href="~/lib/plugins/toastr/toastr.min.css">
<!-- Theme style -->
<link rel="stylesheet" href="~/lib/dist/css/adminlte.min.css">

<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0">Personeller</h1>
            </div><!-- /.col -->
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <button type="button" class="btn btn-outline-primary btn-block" data-toggle="modal" data-target="#addPersonalModal"><i class="fa fa-plus"></i> Yeni Personel</button>
                </ol>
            </div><!-- /.col -->
        </div><!-- /.row -->
    </div><!-- /.container-fluid -->
</div>

<section class="content">
    <div class="modal fade" id="modal-delete-personal">
        <div class="modal-dialog modal-sm">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title">Personel İptali</h4>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <input type="hidden" id="modalPersonalId" />
                    <p>Personel pasif edilecektir. Personelin eski kayıtları gözükmeye devam edecektir, personele yeni atama yapılmayacaktır. Devam etmek istiyor musunuz ?</p>
                </div>
                <div class="modal-footer justify-content-between">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Vazgeç</button>
                    <button type="button" class="btn btn-primary" id="btnDeletePersonal">Devam Et</button>
                </div>
            </div>
            <!-- /.modal-content -->
        </div>
        <!-- /.modal-dialog -->
    </div>
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-body">
                        <table id="example1" class="table table-bordered table-striped">
                            <thead>
                            <tr>
                                <th>Personel Adı</th>
                                <th>Uzmanlık</th>
                                <th>Ders Ücreti</th>
                                <th>Telefon Numarası</th>
                                <th style="width: 20px"></th>
                            </tr>
                            </thead>
                            <tbody>
                            @if (Model != null)
                            {
                                @foreach (var item in @Model.PersonalList)
                                {
                                    <tr> @*onclick="GetPersonalDetail('@item.Id');">
*@                                        <td>@item.Name</td>
                                        <td>@item.Profession</td>
                                        <td>@item.SeansPrice ₺</td>
                                        <td>@item.PhoneNumber</td>
                                        <td>
                                            <button class="btn btn-danger btn-sm" id="deletePersonal" onclick="DeletePersonal('@item.Id')">
                                                <i class="fas fa-trash" style="color: white"></i>
                                            </button>
                                        </td>
                                    </tr>
                                }

                            }

                            </tbody>
                        </table>
                    </div>
                    <!-- /.card-body -->
                </div>
            </div>
        </div>
    </div>
    <div class="modal fade" id="addPersonalModal" tabindex="-1" role="dialog" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Personel Ekleme/Güncelleme</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>

                <form id="addPersonalForm" action="AddOrUpdatePersonal" method="post">
                    <input hidden id="personalId" name="personalId"/>
                    <div class="card-body">
                        <div class="form-group">
                            <label for="inputPersonalName">Personel Adı</label>
                            <input type="text" name="name" class="form-control" id="inputPersonalName" placeholder="Personel Adı">
                        </div>

                        <div class="form-group">
                            <label for="inputPersonalProfession">Uzmanlık Alanı</label>
                            <input type="text" name="profession" class="form-control" id="inputPersonalProfession" placeholder="Uzmanlık Alanı">
                        </div>

                        <div class="form-group">
                            <label for="inputSeansPrice">Ders Ücreti</label>
                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text">₺</span>
                                </div>
                                <input type="number" name="seansprice" class="form-control" id="inputSeansPrice" min="1" placeholder="Ders Ücreti">
                                <div class="input-group-append">
                                    <span class="input-group-text">.00</span>
                                </div>
                            </div>
                        </div>

                        <div class="form-group">
                            <label for="inputPhoneNumber">Telefon Numarası</label>
                            <input type="text" name="phonenumber" class="form-control"
                                   id="inputPhoneNumber"
                                   data-inputmask='"mask": "0 (999) 999 99 99"' data-mask>
                        </div>


                    </div>
                    <!-- /.card-body -->
                    <div class="card-footer">
                        <button type="submit" class="btn btn-primary">Kaydet</button>
                    </div>
                </form>


            </div>
        </div>
    </div>
</section>

@section Scripts
{
    <!-- DataTables  & Plugins -->
    <script src="~/lib/plugins/datatables/jquery.dataTables.min.js"></script>
    <script src="~/lib/plugins/datatables-bs4/js/dataTables.bootstrap4.min.js"></script>
    <script src="~/lib/plugins/datatables-responsive/js/dataTables.responsive.min.js"></script>
    <script src="~/lib/plugins/datatables-responsive/js/responsive.bootstrap4.min.js"></script>
    <script src="~/lib/plugins/datatables-buttons/js/dataTables.buttons.min.js"></script>
    <script src="~/lib/plugins/datatables-buttons/js/buttons.bootstrap4.min.js"></script>
    <script src="~/lib/plugins/jszip/jszip.min.js"></script>
    <script src="~/lib/plugins/pdfmake/pdfmake.min.js"></script>
    <script src="~/lib/plugins/pdfmake/vfs_fonts.js"></script>
    <script src="~/lib/plugins/datatables-buttons/js/buttons.html5.min.js"></script>
    <script src="~/lib/plugins/datatables-buttons/js/buttons.print.min.js"></script>
    <script src="~/lib/plugins/datatables-buttons/js/buttons.colVis.min.js"></script>
    <script src="~/lib/plugins/toastr/toastr.min.js"></script>

    <!-- InputMask -->
    <script src="~/lib/plugins/inputmask/jquery.inputmask.min.js"></script>


    <script>
    
        function DeletePersonal(personalId){
            $('#modalPersonalId').val(personalId);
            $('#modal-delete-personal').modal();
        }

        function GetPersonalDetail(personalId){

            $.ajax({
                type: 'GET',
                url: '/personal/GetPersonelById?personalId=' + personalId,
                success: function (response) {

                    $('#inputPersonalName').val(response[0].name);
                    $('#inputPersonalProfession').val(response[0].profession);
                    $('#inputSeansPrice').val(response[0].seansPrice);
                    $('#inputPhoneNumber').val(response[0].phoneNumber);
                    $('#personalId').val(response[0].id);
                    

                    $('#addPersonalModal').modal();
                },
                error: function () {
                    alertify.error('Personel bilgileri alınırken hata oluştu');
                }
            });
        }

        $(function () {

            $('#btnDeletePersonal').click(function () {

                var data = { personalId: $('#modalPersonalId').val() }
                $.ajax({
                    type: 'POST',
                    url: '/Personal/CancelPersonal',
                    data: data,
                    success: function (response) {
                        if (response === "200") {
                            $('#modal-delete-personal').modal('hide');
                            alertify.success('Personel İptal Edildi.');
                            window.location.href = "/Personal/PersonalList"
                        } else {
                            $('#modal-delete-personal').modal('hide');
                            alertify.warning('Paket İptal Edilemedi.');
                        }
                    },
                    error: function () {
                        $('#modal-delete-personal').modal('hide');
                        alertify.error('Erişim sağlanamadı.');
                    }
                });
            });

            $('[data-mask]').inputmask()

            $("#example1").DataTable({
                "responsive": true, "lengthChange": false, "autoWidth": false,
                "language": {
                    "url": "//cdn.datatables.net/plug-ins/9dcbecd42ad/i18n/Turkish.json"
                },
                "buttons": ["copy", "csv", "excel", "pdf", "print"]
            }).buttons().container().appendTo('#example1_wrapper .col-md-6:eq(0)');

            $('#addPersonalForm').validate({
                rules: {
                    name: {
                        required: true,
                    },
                    phonenumber: {
                        required: true
                    },
                    seansprice: {
                        required: true
                    },
                    profession: {
                        required: true
                    },
                },
                messages: {
                    name: {
                        required: "Lütfen personel adını girin"
                    },
                    phonenumber: {
                        required: "Lütfen personel telefonunu girin"
                    },
                    seansprice: {
                        required: "Lütfen seans ücretini girin"
                    },
                    profession: {
                        required: "Lütfen uzmanlık alanını girin"
                    }
                },
                errorElement: 'span',
                errorPlacement: function (error, element) {
                    error.addClass('invalid-feedback');
                    element.closest('.form-group').append(error);
                },
                highlight: function (element, errorClass, validClass) {
                    $(element).addClass('is-invalid');
                },
                unhighlight: function (element, errorClass, validClass) {
                    $(element).removeClass('is-invalid');
                }
            });
        });

    
    </script>
    @if (TempData["notification"] != null)
    {
        <script>
            @Html.Raw(TempData["notification"])
        </script>
    }
}

