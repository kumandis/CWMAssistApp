@model ProductVM
@{
    ViewData["Title"] = "Index";
}

<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0">Hizmetler</h1>
            </div><!-- /.col -->
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <button type="button" class="btn btn-outline-primary btn-block" data-toggle="modal" data-target="#addProductModal"><i class="fa fa-plus"></i> Yeni Hizmet</button>
                </ol>
            </div><!-- /.col -->
        </div><!-- /.row -->
    </div><!-- /.container-fluid -->
</div>

<div class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-body">
                        <table id="tblProduct" class="table table-bordered table-striped">
                            <thead>
                                <tr>
                                    <th>Hizmet Adı</th>
                                    <th>Fiyatı</th>
                                    <th style="width: 20px"></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in @Model.ProductList!)
                                {
                                    <tr>
                                        <td>@item.Name</td>
                                        <td>@item.Price ₺</td>
                                        <td>
                                            <button class="btn btn-danger btn-sm" id="deletePacket" onclick="DeletePacket('@item.Id')">
                                                <i class="fas fa-trash" style="color: white"></i>
                                            </button>
                                        </td>
                                    </tr>
                                }

                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="addProductModal" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">

            <div class="modal-header">
                <h5 class="modal-title" id="addProductModalLabel">Hizmet Ekleme</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>


            <form id="addProductForm" action="AddProduct" method="post">
                <div class="card-body">
                    <div class="form-group">
                        <label for="inputProductName">Hizmet Adı</label>
                        <input type="text" name="name" class="form-control" id="inputProductName" placeholder="Hizmet Adı">
                    </div>

                    <div class="form-group">
                        <label for="inputProductPrice">Hizmet Fiyatı</label>
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text">₺</span>
                            </div>
                            <input type="number" name="price" class="form-control" id="inputProductPrice" min="1" placeholder="Hizmet Fiyatı">
                            <div class="input-group-append">
                                <span class="input-group-text">.00</span>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card-footer">
                    <button type="submit" class="btn btn-primary">Kaydet</button>
                </div>
            </form>


        </div>
    </div>
</div>

@section Scripts{

    <script>
    
        $(function (){

            $('#addProductForm').validate({
                rules: {
                    name: {
                        required: true,
                    },
                    price: {
                        required: true
                    },
                },
                messages: {
                    name: {
                        required: "Lütfen hizmete bir ad verin"
                    },
                    price: {
                        required: "Lütfen hizmetin ücretini girin"
                    }
                },
                errorElement: 'span',
                errorPlacement: function (error, element) {
                    error.addClass('invalid-feedback');
                    element.closest('.form-group').append(error);
                },
                highlight: function (element, errorClass, validClass) {
                    $(element).addClass('is-invalid');
                },
                unhighlight: function (element, errorClass, validClass) {
                    $(element).removeClass('is-invalid');
                }
            });

        });

    </script>


    @if (TempData["notification"] != null)
    {
        <script>
            @Html.Raw(TempData["notification"])
        </script>
    }
}